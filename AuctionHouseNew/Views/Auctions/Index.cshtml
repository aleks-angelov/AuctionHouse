@model IEnumerable<AuctionHouseNew.Models.Auction>

@{
    ViewBag.Title = "Auction Index";
}

<h2>@ViewBag.Title</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.Label("Item")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WinnerID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinnerID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.AuctionID}) |
                @Html.ActionLink("Details", "Details", new {id = item.AuctionID}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.AuctionID})
            </td>
        </tr>
    }

</table>