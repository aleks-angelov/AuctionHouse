@model AuctionHouseNew.Models.Category

@{
    ViewBag.Title = @Model.Name;
    <img src="@Url.Content(Model.ImagePath)" alt="@Model.Name" height="100" style="padding: 10px"/>
}
<br/>

@if (User.IsInRole("Admin"))
{
    @Html.ActionLink("Edit", "Edit", new {id = Model.CategoryID})
    @Html.Label("|")
    @Html.ActionLink("Delete", "Delete", new {id = Model.CategoryID})
    <br/>
}

@foreach (var item in Model.Items)
{
    <a href="@Url.Action("Details", "Items", new {id = item.ItemID})">
        <table id="frame" style="margin-right: 10px;">
            <tr>
                <td>
                    <img src="@Url.Content(item.ImagePath)" alt="@item.Name" height="250" style="padding: 10px;"/>
                </td>
            </tr>
            <tr>
                <td style="text-align: center">
                    <span style="font-size: 1.2em;">@item.Name</span>
                </td>
            </tr>
        </table>
    </a>
}

