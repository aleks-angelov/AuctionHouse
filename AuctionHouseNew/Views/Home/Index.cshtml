    ViewBag.Title = "Home";
}

<div style="align-items: center;">
    <img src="@Url.Content("~/Content/Images/ah_background.png")" alt="Auction House Background" style="width: 100%;"/>
</div>

<div class="row">
    <div class="col-md-6">
        <h1>Most Wanted:</h1>
        <table style="margin-bottom: 5px">
            <tr>
                <td style="border-right: 1px solid #ccc">
                    <img src="@Url.Content("~/Content/Images/item_art_1.jpg")" alt="Venice Twilight" height="100" style="padding-right: 20px"/>
                </td>
                <td>
                    <div style="padding-left: 20px">
                        <a href="@Url.Action("Details", "Items", new {id = 47})">
